
<!-- @cat -->
<form action= "/cats/<%=@cat.id%>" method="post">
<!-- <form action = "<%#=cat_url(@cat)%>" -->
  <input type="hidden" name="_method" value="PATCH">

  <label for="cat_name">Name</label>
  <input name="cat[name]" id="cat_name" type="text" value="<%= @cat.name %>">
  <br>

  <label for="birth_date">Birth Date</label>
  <input name="cat[birth_date]" id="birth_date" type="date" value="<%= @cat.birth_date %>">
  <br>



  <label for="cat_coat_color"> Coat Color </label>
  <select name = "cat[color]" id= 'cat_coat_color'>
    <option value="--Please Select--" disabled></option>
    <% @colors.each do |color| %>
      <option value = "<%= color %>" <%= color == @cat.color ? "selected" : "" %> >
        <%= color.capitalize %>
      </option>
    <% end %>
  </select>

  <br>

  <label> Gender: </label>
  <label> Male </label>
  <input type="radio" name="cat[sex]" value="M" <%= "M" == @cat.sex ? "checked" : "" %>>
  <label> Female </label>
  <input type="radio" name="cat[sex]" value="F" <%= "F" == @cat.sex ? "checked" : "" %>>
  <br>

  <label for="description"> Description </label>
  <p>
    <textarea name="cat[description]" id = "description">
      <%= @cat.description %>
    </textarea>
  </p>

  <input type="submit" value="Edit Cat">
</form>
