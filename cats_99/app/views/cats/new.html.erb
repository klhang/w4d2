<form  action="/cats" method="post">
  <label for="cat_name">Name</label>
  <input name="cat[name]" id="cat_name" type="text">
  <br>

  <label for="birth_date">Birth Date</label>
  <input name="cat[birth_date]" id="birth_date" type="date">
  <br>



  <label for="cat_coat_color"> Coat Color </label>
  <select name = "cat[color]" id= 'cat_coat_color'>
    <option value="--Please Select--" disabled selected></option>
    <% @colors.each do |color| %>
      <option value=" <%= color %> "> <%= color.capitalize %> </option>
    <% end %>
  </select>

  <br>

  <label> Gender: </label>
  <label> Male </label>
  <input type="radio" name="cat[sex]" value="M">
  <label> Female </label>
  <input type="radio" name="cat[sex]" value="F">
  <br>

  <label for="description"> Description </label>
  <p>
    <textarea name="cat[description]" id = "description"></textarea>
  </p>

  <input type="submit" value="Add Cat">
</form>

<%= render "form", cat: @cat, action: :new %>
